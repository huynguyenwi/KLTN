@model ContactModel
<div class="row">
	<div class="col-sm-3">
		<div class="companyinfo">
			<p><img src="~/media/logo/@Model.LogoImg" width="200" height="120" /></p>
			<p>@Html.Raw(@Model.Description)</p>
		</div>
	</div>

		<div class="col-sm-5">
			@Html.Raw(@Model.Map)
		
		</div>

	<div class="col-sm-4">
		<div class="address">
			<h5><b>Name : @Model.Name</b></h5>
			<h5>Email : @Model.Email</h5>
			<h5>Hotline  : @Model.Phone</h5>
		</div>
	</div>
</div>