@model IEnumerable<ContactModel>
@{
    ViewData["title"] = "Contact Info";

    Paginate pager = new Paginate();

    int pageNo = 0;

    if (ViewBag.Pager != null)
    {
        pager = ViewBag.Pager;

        pageNo = pager.CurrentPage;
    }
}
<h3>List Contact</h3>


<table class="table" id="myTable">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Name</th>
            <th scope="col">Description</th>
            <th scope="col">Map</th>
            <th scope="col">Email</th>
            <th scope="col">Logo</th>
            <th scope="col">Phone</th>

            <th scope="col">Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <th scope="row">#</th>
                <td>@item.Name</td>
                <td>@Html.Raw(@item.Description)</td>
                <td>@Html.Raw(@item.Map)</td>
                <td>@item.Email</td>
                <td><img src="~/media/logo/@item.LogoImg" width="120" height="120" /></td>
                <td>@item.Phone</td>
               
                <td>
                    <a asp-action="Edit" class="btn btn-warning btn-sm" asp-controller="Contact">Edit</a>
                    
                </td>
            </tr>
        }



    </tbody>
</table>
<partial name="_paging" model="@pager" />
