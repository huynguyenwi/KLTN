@model IEnumerable<OrderDetails>

@{
    ViewData["title"] = "Order Details";
    decimal total = 0; //tổng
    decimal subtotal = 0; //thành tiền
}

<!DOCTYPE htm>

<html>
    <head>
        <meta name="viewport" content="width=device-width"/>
        <title>Order Details</title>
    </head>
    <body>
        <h3>Order Details</h3>
    <table class="table" id="detail_order">
        <thead>
            <tr>
                <th>#</th>
                <th>Order Code</th>
                <th>UserName</th>
                <th>Product Name</th>
                <th>Product Price</th>
                <th>Quantity</th>
                <th>Subtotal</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                subtotal = item.Quantity * item.Price;
                total += subtotal;
                <tr>
                    <input type="hidden" asp-for="@item.OrderCode" class="getId" />
                    <td>@item.Id</td>
                    <td>@item.OrderCode</td>
                    <td>@item.UserName</td>
                    <td>@item.Product.Name</td>
                    <td>@item.Price.ToString("#, ##0 VNĐ")</td>
                    <td>@item.Quantity</td>
                    <td>@subtotal.ToString("#, ##0 VNĐ")</td>

                </tr>
            }
            <tr>
                <td>Total:</td>
                <td></td>
                <td></td>
                <td></td>
                <td></td>
                <td>@total.ToString("#, ##0 VNĐ")</td>
                <td>
                    <select class="form-control select-update-order">
                        <option value="1">Đơn hàng mới</option>
                        <option value="0">Đã xử lý</option>
                    </select>

                </td>
            </tr>



        </tbody>
    </table>
    </body>
</html>

@section Scripts{
    <script>
        new DataTable('#detail_order', {
            layout: {
                topStart: {
                    buttons: ['pdf', 'print']
                }
            }
        });
    </script>
    <script>
        $(document).ready(function () {
            $('.select-update-order').change(function () {
                var status = $(this).val();
                var ordercode = $('.getId').val();

                $.ajax({
                    type: "POST",
                    url: "@Url.Action("UpdateOrder")",
                    data: { status: status, ordercode: ordercode }, //send data to the server

                    success: function (result) {
                        if (result.success) { 
                            Swal.fire("Cập nhật đơn hàng thành công.");
                        } else {
                            Swal.fire("Cập nhật đơn hàng thất bại." + result.message);
                        }
                    },
                    error: function (red, status, error) {
                        console.error("Error updating order: ", error);
                    }
                });
            });
        });
    </script>

}




